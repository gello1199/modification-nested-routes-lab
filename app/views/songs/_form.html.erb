<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <% if @artist %>
  <%= f.hidden_field :artist_id, value: @artist.id %>
  <% else %>
  <%= f.collection_select :artist_id, Artist.all, :id, :name %>
  <%end%>
  <%= f.submit %>
<% end %>
